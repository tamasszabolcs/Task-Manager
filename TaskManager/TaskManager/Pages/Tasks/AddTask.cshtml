<script>
    // Get the "Status" dropdown list element
    var statusSelect = document.getElementById("NewTask_StatusId");

    // Get the progress bar element
    var progressBar = document.getElementById("progress-bar");

    // Get the progress value element
    var progressValue = document.getElementById("progress-value");

    // Show or hide the progress bar based on the selected status
    statusSelect.addEventListener("change", function () {
        if (statusSelect.value === "2") {
            progressBar.style.display = "block";
        } else {
            progressBar.style.display = "none";
        }
    });

    // Update the progress value element when the slider is moved
    var progressSlider = document.getElementById("progress-slider");
    progressSlider.addEventListener("input", function () {
        progressValue.innerHTML = progressSlider.value;
    });
</script>


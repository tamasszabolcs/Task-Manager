@page "/categories"
@model TaskManager.Pages.Categories.CategoryListModel
@{
	ViewData["Title"] = "Categories";
}
<h1>Categories</h1>


<a type="submit" class="btn btn-primary" style="margin-bottom: 20px;" asp-page="/Categories/AddCategory">Add Category</a>

<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(var category in Model.Categories)
		{
		<tr>
			<td>@category.Name</td>
			<td>@category.Description</td>
			<td>
				<a asp-page="./EditCategory" asp-route-id="@category.CategoryId">Edit</a>
				<a asp-page="./CategoryList" onclick="return confirm('Are you sure you want to delete this item?');"
				asp-page-handler="Delete" asp-route-id="@category.CategoryId">Delete</a>
			</td>
		</tr>
		}
	</tbody>
</table>
@page "/status"
@model TaskManager.Pages.Statuses.StatusListModel
@{
	ViewData["Title"] = "Status";
}
<div class="container">
	<h1>Status</h1>
	 <div class="button">
            <a class="btn btn-primary" asp-area="" asp-page="/Statuses/AddStatus">
                Add Status
            </a>
        </div>
	<br>
	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var status in Model.Statuses)
			{
				<tr>
					<td>@status.Name</td>
					@if (!new string[] { "Unstarted", "In Progress", "Finished" }.Contains(status.Name))
					{
						<td>
							<a asp-page="./EditStatus" asp-route-id="@status.StatusId">Edit</a>
							<a asp-page-handler="Delete" asp-page="./StatusList" asp-route-id="@status.StatusId" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
						</td>
					}
					else
					{
						<td></td>
					}
				</tr>
			}
		</tbody>
	</table>
</div>
